{
    "classId": "idm.component.idmCommonComponent.inotice",
    "comName": "通知公告",
    "className": "INotice",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "延迟时间",
                    "bindKey": "delay",
                    "desc": "动画延迟时间，单位：s",
                    "default": 0.2
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "滚动速率",
                    "bindKey": "speed",
                    "desc": "滚动速率，单位：px/s",
                    "default": 60
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "公告间隔",
                    "bindKey": "itemSpan",
                    "desc": "设置公告间隔，单位px",
                    "default": 20
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "左侧文本",
                    "bindKey": "leftText",
                    "default": "通知公告"
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "dictionary": [
                        {
                            "label": "当前页打开",
                            "value": "_self"
                        },
                        {
                            "label": "新页签打开",
                            "value": "_blank"
                        }
                    ],
                    "default": "_self"
                }
            ]
        },
        {
            "type": "group",
            "text": "样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "宽",
                    "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                    "bindKey": "width",
                    "default": "100%"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "高",
                    "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                    "bindKey": "height",
                    "default": "60px"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "三角形宽",
                    "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                    "bindKey": "triangleWidth",
                    "default": "20px"
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "左侧宽",
                    "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                    "bindKey": "leftWidth",
                    "default": "100px"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "左侧背景",
                    "bindKey": "leftBgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "左侧文字",
                    "bindKey": "font",
                    "default": {
                        "fontFamily": "",
                        "fontColors": {
                            "hex": "#FFFFFF",
                            "hex8": "#FFFFFFFF"
                        },
                        "fontSize": 15,
                        "fontSizeUnit": "px"
                    }
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "左侧边距",
                    "bindKey": "leftBox",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "25px",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "",
                        "paddingRightVal": "",
                        "paddingBottomVal": "",
                        "paddingLeftVal": ""
                    }
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "右侧边距",
                    "bindKey": "rightBox"
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "右侧文字",
                    "bindKey": "rightFont",
                    "default": {
                        "fontFamily": "",
                        "fontColors": {
                            "hex": "#333333",
                            "hex8": "#333333FF"
                        },
                        "fontSize": 15,
                        "fontSizeUnit": "px"
                    }
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "default": [
                {
                    "key": "blue",
                    "mainColor": {
                        "hex": "#0073CA",
                        "hex8": "#0073CAFF"
                    }
                },
                {
                    "key": "red",
                    "mainColor": {
                        "hex": "#E21A1A",
                        "hex8": "#E21A1AFF"
                    }
                },
                {
                    "key": "green",
                    "mainColor": {
                        "hex": "#0EAF64",
                        "hex8": "#0EAF64FF"
                    }
                }
            ],
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里选择blue",
                    "default": "",
                    "placeholder": "例如：blue",
                    "ctrlAttrObject": {
                        "mode": "combobox"
                    },
                    "dictionary": [
                        {
                            "label": "red",
                            "value": "red"
                        },
                        {
                            "label": "green",
                            "value": "green"
                        },
                        {
                            "label": "blue",
                            "value": "blue"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc": "主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display": "@[key]"
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "数据模式",
                    "bindKey": "dataSourceType",
                    "default": "dataSource",
                    "dictionary": [
                        {
                            "label": "数据源",
                            "value": "dataSource"
                        },
                        {
                            "label": "页面统一接口",
                            "value": "pageCommonInterface"
                        }
                    ]
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "结果集名",
                    "bindKey": "dataName",
                    "desc": "页面接口设定的结果集名称，位置为：页面设置》高级设置》页面接口",
                    "default": "",
                    "placeholder": "示例：resultData",
                    "display": "@[dataSourceType=='pageCommonInterface']"
                },
                {
                    "type": "textarea",
                    "layoutType": "inline",
                    "text": "显示字段",
                    "bindKey": "dataFiled",
                    "desc": "根据接口返回数据格式指定结果集的字段，比如结果集名为resultData（自定义接口忽略）且它的值为{data:{filedName:[{\"text\":\"\",\"value\":\"\",\"check\":true}]}}，则这里应该填写data.filedName",
                    "default": "",
                    "placeholder": "示例：data.filedName 或者 [0].data[0].filedName",
                    "display": "@[dataSourceType=='pageCommonInterface']"
                },
                {
                    "type": "dataSourceSelect",
                    "layoutType": "inline",
                    "text": "数据源",
                    "display": "@[dataSourceType == 'dataSource']",
                    "bindKey": "dataSource",
                    "desc": "组件数据源，详细用法见文档"
                },
                {
                    "type": "dataSourceFiledSelect",
                    "layoutType": "inline",
                    "text": "文本字段",
                    "bindKey": "noticeFieldTitle",
                    "desc": "设置显示通知字段",
                    "default": "text",
                    "ctrlAttrObject": {
                        "dataSourceBindkey": "dataSource"
                    }
                },
                {
                    "type": "actionSelect",
                    "layoutType": "block",
                    "text": "自定义点击事件",
                    "desc": "自定义点击通知时事件，return false后内置事件无效",
                    "bindKey": "customClickFunction",
                    "multiple": false
                }
            ]
        }
    ]
}
